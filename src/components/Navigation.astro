---
const currentPath = Astro.url.pathname;
---

<div class="header-container container-fluid container-xl position-relative">
  <!-- Top bar row -->
  <div class="row w-100 mb-3">
    <div class="col-12" style="padding: 0;">
      <div
        class="top-bar d-flex justify-content-between align-items-center py-2 px-3 text-white"
        style="padding-right: 0px !important;"
      >
        <div class="top-bar-left d-flex align-items-center gap-3">
          <!-- Contact email with Gmail compose link, hidden on mobile and tablet -->
            <span class="d-none d-lg-flex align-items-center" id="contact-email">
            <i class="bi bi-envelope me-1" aria-hidden="true"></i>
            <a
              href="https://mail.google.com/mail/?view=cm&fs=1&to=contact@brosmedia.ma"
              target="_blank"
              class="text-white text-decoration-none hover:text-gray-300"
              aria-label="Email us at contact@brosmedia.ma"
            >
              contact@brosmedia.ma
            </a>
          </span>
          <!-- Business hours, hidden on mobile and tablet -->
          <span class="d-none d-lg-flex align-items-center" id="business-hours">
            <i class="bi bi-clock-history me-1" aria-hidden="true"></i>
            Lundi-Samedi: 10h30 - 18h00
          </span>
        </div>
        <div class="top-bar-right d-flex align-items-center gap-2 nowrap">
          <!-- Social media links, visible on all devices -->
          <span class="d-flex align-items-center" id="social-media-links">
            <span class="d-none d-lg-block"> Suivez-nous sur: </span>
            <a
              href="https://www.facebook.com/BROSMEDIA.PRODUCTION"
              class="ms-2 text-white hover:text-gray-300"
              aria-label="Follow us on Facebook"
              target="_blank"
            >
              <i class="bi bi-facebook"></i>
            </a>
            <a
              href="https://www.instagram.com/brosmedia.digital"
              class="ms-2 text-white hover:text-gray-300"
              aria-label="Follow us on Twitter"
              target="_blank"
            >
              <i class="bi bi-instagram"></i>
            </a>
            <a
              href="https://ma.linkedin.com/company/brosmedia-sarl"
              class="ms-2 text-white hover:text-gray-300"
              aria-label="Follow us on LinkedIn"
              target="_blank"
            >
              <i class="bi bi-linkedin"></i>
            </a>
          </span>
          <!-- Contact phone, visible on all devices -->
          <span class="d-flex align-items-center ms-3" id="contact-phone">
            <span class="d-none d-lg-block me-1"> Appelez-nous: </span>
            <a
              href="tel:+212671884968"
              class="text-white text-decoration-none hover:text-gray-300"
              aria-label="Call us at +1 234 567 890"
            >
              (+212) 671884968
            </a>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Logo, nav, and button row -->
  <div class="row w-100 d-flex align-items-center justify-content-between">
    <div class="col-auto">
      <a href="/" class="logo d-flex align-items-center me-auto me-xl-0">
        <h1 class="sitename">
          <img
            src="/Logo-brosmedia-png.webp"
            alt="Logo"
            class="h-10 w-auto sm:h-10 md:h-10 lg:h-12 object-contain"
          />
        </h1>
      </a>
    </div>
    <div class="col-auto" style="padding-right: 0px !important;">
      <nav id="navmenu" class="navmenu">
          <ul>
            <li>
              <a href="/" class={currentPath === "/" ? "active" : ""}>Accueil</a
              >
            </li>
            <li>
              <a
                href="/strategies-max/"
                class={currentPath === "/strategies-max/" ? "active" : ""}
                >Stratégies Max</a>
            </li>
            <li class="dropdown">
              <a href="#"
                ><span>Services</span>
                <i class="bi bi-chevron-down toggle-dropdown"></i></a
              >
              <ul>
                <li><a href="/creation-de-site-web">Conception de site web</a></li>
                <li><a href="#">Création publicitaire</a></li>
                <li><a href="#">Vidéo publicitaire</a></li>
              </ul>
            </li>
            <li>
              <a
                href="/qui-sommes-nous/"
                class={currentPath === "/qui-sommes-nous/" ? "active" : ""}
                >Qui sommes-nous ?</a
              >
            </li>
          </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>
    </div>
    <div class="col-auto d-none d-lg-block">
      <a class="btn-getstarted" href="#about">Contact</a>
    </div>
  </div>
</div>
